{
  "app-id": "net.hachune.mikutter",
  "runtime": "org.gnome.Platform",
  "runtime-version": "3.26",
  "sdk": "org.gnome.Sdk",
  "command": "mikutter",
  "finish-args": [
    "--share=ipc", "--socket=x11",
    "--socket=wayland",
    "--share=network"
  ],
  "modules": [
    {
      "name": "ruby",
      "sources": [
        {
          "type": "archive",
          "url": "https://cache.ruby-lang.org/pub/ruby/2.3/ruby-2.3.6.tar.gz",
          "sha256": "8322513279f9edfa612d445bc111a87894fac1128eaa539301cebfc0dd51571e"
        }
      ]
    },
    {
      "name": "bundler",
      "buildsystem": "simple",
      "build-commands": [
        "gem install --local bundler-1.16.2.gem"
      ],
      "sources": [
        {
          "type": "file",
          "url": "https://rubygems.org/downloads/bundler-1.16.2.gem",
          "sha256": "3bb53e03db0a8008161eb4c816ccd317120d3c415ba6fee6f90bbc7f7eec8690"
        }
      ]
    },
    "rubygems.json",
    {
      "name": "mikutter",
      "buildsystem": "simple",
      "build-commands": [
        "install -Dm644 -t /app/share/mikutter mikutter.rb LICENSE README",
        "for f in $(find core -type f); do install -Dm644 -t /app/share/mikutter/$(dirname $f) $f; done"
      ],
      "sources": [
        "mikutter.git.json"
      ]
    },
    {
      "name": "bin",
      "buildsystem": "simple",
      "build-commands": [
        "install -Dm755 mikutter /app/bin/mikutter"
      ],
      "sources": [
        {
          "type": "file",
          "path": "mikutter"
        }
      ]
    }
  ]
}
